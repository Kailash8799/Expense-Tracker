@model Transaction

<form method="post">
    <fieldset>
        <h1 class="my-3 text-center">Edit expense</h1>
        <partial name="_NotificationPartial" />
        <div class="form-group">
            <label asp-for="Title" class="form-label mt-4">Title</label>
            <input asp-for="Title" type="text" class="form-control" id="Title" aria-describedby="emailHelp" placeholder="Enter title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <input asp-for="UserId" type="number" value="4" class="form-control visually-hidden" id="Title" aria-describedby="emailHelp" placeholder="Enter title">
        <span asp-validation-for="User" class="text-danger"></span>
        <span asp-validation-for="Category" class="text-danger"></span>
        <div class="form-group">
            <label asp-for="Amount" class="form-label mt-4">Amount</label>
            <input asp-for="Amount" type="number" class="form-control" id="Amount" aria-describedby="emailHelp" placeholder="Enter amount">
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="exampleSelect1" class="form-label mt-4">Select category</label>
            <select class="form-select" asp-for="CategoryId" asp-items="@ViewBag.CategoriesList" id="exampleSelect1">
                <option disabled selected>--Select category</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label mt-4">Example textarea</label>
            <textarea asp-for="Description" class="form-control" id="exampleTextarea" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        @Html.AntiForgeryToken()
        <button type="submit" class="btn mt-3 btn-primary">Submit</button>
    </fieldset>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}